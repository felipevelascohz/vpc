{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "outDir": "./",
    "strictPropertyInitialization": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "test"
  ]
}
